<div class="container">
    <div class="jumbotron">
      <h1 class="text-center"><span class="glyphicon glyphicon-thumbs-up"></span> IT'S BURGER TIME!</h1>
      <hr>
      <h2 class="text-center">Add the burger of your dreams to the list, then DEVOUR IT!</h2>
      <br>
      </div>
      
  <div class="row">
  <div id= "toDevour" class="col-md-4 col-md-offset-2">

    <h2>Burgers to Devour</h2>

    <ul>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div id= "devoured" class="col-md-4 col-md-offset-1">

    <h2>Devoured Burgers</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
    </ul>
  </div>
  </div>
  <div class= 'row'>
  <div class="col-md-4 col-md-offset-2">

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger_name" name="name">
      </div>

      <button type="submit" value="Submit">Submit</button>
    </form>
  </div>
  </div>
</div>